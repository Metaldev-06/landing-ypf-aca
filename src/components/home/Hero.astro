---
import Image from "astro/components/Image.astro";
import imageHero from "../../../public/img/hero-image.jpg";
---

<section class="hero__section">
  <article class="hero__container">
    <Image
      src={imageHero}
      alt="Hero Imagen"
      class="hero__image"
      loading="eager"
    />

    <div class="hero__content">
      <h1>Una parada <br /> TÃ¡ctica</h1>
    </div>
  </article>
</section>

<style lang="scss">
  @import "../../styles/_variables.scss", "../../styles/_mediaqueries.scss";

  .hero__section {
    width: 100%;
    height: 100dvh;
    background-color: $black-color;

    .hero__container {
      width: 100%;
      height: 100%;
      position: relative;

      .hero__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: bottom;
        opacity: 60%;
        position: absolute;
        top: 0;
        user-select: none;
      }

      .hero__content {
        width: $full-width;
        max-width: 1400px;
        height: 100%;
        font-weight: bold;
        color: $white-color;
        display: flex;
        align-items: center;
        margin: 0 auto;
        font-size: clamp(1.5rem, 5vw, 2.5rem);

        h1 {
          z-index: 10;
        }
      }
    }
  }
</style>
