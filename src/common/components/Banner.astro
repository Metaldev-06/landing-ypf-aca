---
import Image from "astro/components/Image.astro";

import imageBanner from "../../../public/img/banner-person.png";
import playstoreLogo from "../../../public/img/playstore-icon.png";
import applestoreLogo from "../../../public/img/applestore-icon.png";
---

<section class="banner__section">
  <article class="banner__container">
    <div class="banner__info">
      <h2>Descubrí <br /> la APP YPF</h2>

      <p>Descargala y empezá a disfrutar de todos los beneficios.</p>

      <div class="button__container">
        <a
          href="https://play.google.com/store/apps/details?id=com.ypf.jpm"
          target="_blank"
        >
          <Image src={playstoreLogo} alt="Playstore logo" loading="lazy" />
          Play Store
        </a>
        <a
          href="https://apps.apple.com/ar/app/ypf-app/id1401504810"
          target="_blank"
        >
          <Image src={applestoreLogo} alt="Appstore logo" loading="lazy" />
          App Store
        </a>
      </div>
    </div>

    <picture class="banner__image">
      <Image src={imageBanner} alt="Banner" loading="lazy" />
    </picture>
  </article>
</section>

<style lang="scss">
  @import "../../styles/_variables.scss";
  @import "../../styles/_mediaqueries.scss";

  .banner__section {
    width: 100%;
    min-height: 520px;
    position: relative;
    display: flex;
    align-items: center;
    background: rgb(31, 70, 146);
    background: -moz-linear-gradient(
      90deg,
      rgba(31, 70, 146, 1) 35%,
      rgba(11, 124, 233, 1) 100%
    );
    background: -webkit-linear-gradient(
      90deg,
      rgba(31, 70, 146, 1) 35%,
      rgba(11, 124, 233, 1) 100%
    );
    background: linear-gradient(
      90deg,
      rgba(31, 70, 146, 1) 35%,
      rgba(11, 124, 233, 1) 100%
    );
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#1f4692",endColorstr="#0b7ce9",GradientType=1);

    .banner__container {
      width: $full-width;
      max-width: 2000px;
      height: 100%;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;

      @include media-up(ipad) {
        flex-direction: column;
        padding-top: 3rem;
      }

      .banner__info {
        width: 100%;
        color: $white-color-secondary;
        max-width: 386px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        z-index: 1;

        @include media-up(ipad) {
          max-width: none;
          text-align: center;
        }

        h2 {
          font-size: 3rem;
          font-weight: bold;
        }

        .button__container {
          display: flex;
          justify-content: flex-start;
          gap: 1rem;

          @include media-up(ipad) {
            justify-content: center;
          }

          a {
            background-color: $white-color;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: bold;
            color: $black-color;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s;

            &:hover {
              background-color: $white-color-secondary;
              transform: scale(1.1);
            }
          }
        }
      }

      .banner__image {
        width: 100%;
        max-width: 400px;
        z-index: 1;

        img {
          width: 100%;
          object-fit: contain;
        }
      }
    }
  }
</style>
