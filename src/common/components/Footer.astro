---
import { Icon } from "astro-icon/components";

const date = new Date().getFullYear();
---

<footer class="footer__container">
  <article class="footer__content">
    <img
      src="/img/background-footer.jpg"
      alt="Footer Image"
      class="footer__image"
    />
    <div class="footer__gradient"></div>
    <div class="footer__info">
      <div class="footer__contact">
        <img src="/img/logo-ypf.svg" alt="Logo YPF" />

        <p>
          <Icon name="icon-pin" size={24} />
          <span>
            Ingeniero Guillermo N. Juarez <br /> Ruta Nacional 81 Km 484 (Ascendente)
            Y Acceso
          </span>
        </p>
        <p>
          <Icon name="icon-mail" size={24} />
          <span> Diazserviciossrl21@gmail.com </span>
        </p>
        <p>
          <Icon name="icon-phone" size={24} />
          <span> 03711420060 </span>
        </p>
      </div>

      <div class="footer__hours">
        <h3>Horarios de Atención</h3>

        <div>
          <div>
            <p><span>Estación (PLAYA)</span> <span>24hs</span></p>
            <hr />
          </div>
          <div>
            <p>
              <span>Tienda (SERVICOMPRA)</span>
              <span>06.00 a 22.00 hs</span>
            </p>
            <hr />
          </div>
          <div>
            <p>
              <span>Administración</span>
              <span>08.00 a 12.00 y de 15.00 a 19.00 hs</span>
            </p>
            <hr />
          </div>
        </div>
      </div>
      <div class="footer__services">
        <h3>Servicios</h3>

        <div class="services__container">
          <div>
            <a href="/">Combustibles</a>
            <a href="/">Servicompra</a>
          </div>

          <div>
            <a href="/">Lubricantes</a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <div class="footer__copyright">
    Copyright &copy; {date} - Desing by<span>Dizeid</span>
  </div>
</footer>

<style lang="scss">
  @import "../../styles/_variables.scss";

  .footer__container {
    width: 100%;
    background-color: $footer-color;
    color: $text-footer-color;
    oberflow: hidden;

    .footer__content {
      width: 100%;
      min-height: 600px;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;

      .footer__image {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 50%;
        z-index: 0;
      }

      .footer__gradient {
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        z-index: 1;

        background: rgb(19, 35, 63);
        background: -moz-radial-gradient(
          circle,
          rgba(19, 35, 63, 0.75) 35%,
          rgba(8, 18, 37, 0.7455357142857143) 100%
        );
        background: -webkit-radial-gradient(
          circle,
          rgba(19, 35, 63, 0.75) 35%,
          rgba(8, 18, 37, 0.7455357142857143) 100%
        );
        background: radial-gradient(
          circle,
          rgba(19, 35, 63, 0.75) 35%,
          rgba(8, 18, 37, 0.7455357142857143) 100%
        );
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#13233f",endColorstr="#081225",GradientType=1);
      }
    }

    .footer__info {
      width: $full-width;
      max-width: 2000px;
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      z-index: 1;

      h3 {
        font-size: 1.5rem;
        font-weight: 900;
      }

      .footer__contact {
        display: flex;
        flex-direction: column;
        gap: 1rem;

        img {
          width: 278px;
          margin-bottom: 2rem;
        }

        p {
          display: flex;
          align-items: center;
          gap: 0.5rem;
        }
      }

      .footer__hours {
        display: flex;
        flex-direction: column;
        gap: 2rem;

        div {
          width: 100%;
          max-width: 548px;
          display: flex;
          flex-direction: column;
          gap: 0.5rem;

          p {
            width: 100%;
            display: flex;
            justify-content: space-between;
          }
        }

        hr {
          width: 105%;
          height: 0;
          border: medium none;
          border-top: 1px dashed $text-footer-color;
        }
      }

      .footer__services {
        width: 100%;
        max-width: 300px;
        display: flex;
        flex-direction: column;
        gap: 2rem;

        .services__container {
          display: flex;
          gap: 1rem;

          div {
            display: flex;
            flex-direction: column;
            gap: 1rem;

            a {
              color: $text-footer-color;

              &:hover {
                text-decoration: underline;
              }
            }
          }
        }
      }
    }

    .footer__copyright {
      width: 100%;
      height: 40px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 0.9rem;
      opacity: 0.7;

      span {
        font-weight: bold;
      }
    }
  }
</style>
