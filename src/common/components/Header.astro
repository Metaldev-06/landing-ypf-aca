<style lang="scss">
  @import "../../styles/_variables.scss";

  .header__container {
    width: 100%;
    height: 80px;
    position: absolute;
    top: 0;
    z-index: 1000;
    transition: background-color 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;

    .header__content {
      width: $full-width;
      max-width: $max-width;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0 auto;

      .header__logo {
      }

      .header__nav {
        display: flex;
        gap: 0.5rem;

        a {
          padding: 0.5rem;
          font-weight: bold;
          color: $white-color;
        }
      }

      .header__logo--secondary {
      }
    }
  }

  .header-sticky {
    position: fixed;
    background-color: $black-color;
    border-radius: 8px;
  }
</style>

<script>
  const $ = (selector: string) => document.querySelector(selector);

  const header = $(".header__container");

  let isSticky = false;

  window.addEventListener("scroll", () => {
    const scrollY = window.scrollY;

    console.log(scrollY);

    if (!header) return;

    if (scrollY > 0 && !isSticky) {
      header.classList.add("header-sticky");
      isSticky = true;
    } else if (scrollY === 0 && isSticky) {
      header.classList.remove("header-sticky");
      isSticky = false;
    }
  });
</script>
